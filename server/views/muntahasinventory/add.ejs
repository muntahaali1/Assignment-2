<%- include ../partials/header.ejs %>

<%- include ../partials/navbar.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">muntahasinventory Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the muntahasinventory Title"
                    name="Name" required>
                </div>

                <div class="form-group">
                    <label for="colourTextField">Colour</label>
                    <input type="text" class="form-control"
                    id="colourTextField"
                    placeholder="Enter the muntahasinventory Colour"
                    name="Colour" required>
                </div>

                <div class="form-group">
                    <label for="materialTextField">Material</label>
                    <input type="text" class="form-control"
                    id="materialTextField"
                    placeholder="Enter the material"
                    name="Material" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the book"
                    name="Description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Book's Price"
                    name="Price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/muntahasinventorylist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



